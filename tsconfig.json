{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "module": "commonjs",

    /* Directories */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strict Type Checks */
    "strict": true,

    /* Module Resolution */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

